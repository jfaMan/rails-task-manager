<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<p><%= 'Completed' %></p>
<% else %>
<p><%= 'Not completed yet' %></p>
<% end %>

<p><%= link_to 'Edit this task', edit_task_path %></p>
<p><%= link_to 'Delete this task', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<p><%= link_to 'Back to list', tasks_path %></p>


